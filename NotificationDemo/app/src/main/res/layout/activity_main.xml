<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_remove_all_notification_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="REMOVE ALL NOTIFICATION"/>

            <Button
                android:id="@+id/btn_send_notification_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SEND NOTIFICATION"/>

            <Button
                android:id="@+id/btn_remove_notification_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="REMOVE NOTIFICATION"/>

            <Button
                android:id="@+id/btn_send_notification_with_tag_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SEND NOTIFICATION WITH TAG"/>

            <Button
                android:id="@+id/btn_remove_notification_with_tag_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="REMOVE NOTIFICATION WITH TAG"/>

            <Button
                android:id="@+id/btn_send_ten_notification_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SEND TEN NOTIFICATION"/>

            <Button
                android:id="@+id/btn_send_flag_no_clear_notification_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SEND FLAG NO CLEAR NOTIFICATION"/>

            <Button
                android:id="@+id/btn_send_flag_ongoing_event_notification_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SEND FLAG ON GOING EVENT NOTIFICATION"/>

            <Button
                android:id="@+id/btn_send_flag_auto_cancel_notification_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SEND FLAG AUTO CANCEL NOTIFICATION"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>